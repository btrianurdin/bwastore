<%- include('../../partials/header') %>
<%- include('../../partials/navbar') %>
<%- include('../../partials/sidebar') %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Nominal</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Beranda</a></li>
            <li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
            <li class="breadcrumb-item active">Tambah</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">
                Tambah Nominal
              </h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <form action="/nominal" method="post">
                <div class="form-group">
                  <label for="namaKoin">Nama Koin</label>
                  <select name="coinName" id="coinName" class="custom-select">
                    <option selected disabled>Pilih Koin</option>
                    <option value="Gold">Gold</option>
                    <option value="Diamond">Diamond</option>
                    <option value="Jewel">Jewel</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="coinQuantity">Jumlah Koin</label>
                  <input type="number" id="coinQuantity" name="coinQuantity" class="form-control" 
                    placeholder="Masukkan Jumlah Koin" required>
                </div>
                <div class="form-group">
                  <label for="price">Harga</label>
                  <input type="number" id="price" name="price" class="form-control" 
                    placeholder="Masukkan Harga" required>
                </div>
                <div class="form-group">
                  <button type="submit" class="btn btn-primary">Tambah</button>
                </div>
              </form>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%- include('../../partials/footer') %>
<%- include('../../partials/js') %>