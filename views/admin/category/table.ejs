<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>No.</th>
      <th>Nama</th>
      <th>Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% categories.forEach((category, i) => { %>
      <tr>
        <td><%= ++i %> </td>
        <td><%= category.name %> </td>
        <td>
          <form action="/category/<%= category._id %>?_method=DELETE" method="post">
            <a href="/category/<%= category._id %>/edit" class="btn btn-info btn-sm">
              <i class="nav-icon fas fa-pen"></i>
            </a>
            <button type="submit" class="btn btn-danger btn-sm"><i class="nav-icon fas fa-trash"></i></button>
          </form>
        </td>
      </tr>
    <% }) %> 
  </tbody>
</table>