<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>No.</th>
      <th>Nama Pemilik</th>
      <th>Nama Bank</th>
      <th>No. Rekening</th>
      <th>Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% banks.forEach((bank, i)=> { %>
      <tr>
        <td>
          <%= ++i %>
        </td>
        <td>
          <%= bank.name %>
        </td>
        <td>
          <%= bank.bankName %>
        </td>
        <td>
          <%= bank.noRekening %>
        </td>
        <td>
          <form action="/bank/<%= bank._id %>?_method=DELETE" method="post">
            <a href="/bank/<%= bank._id %>/edit" class="btn btn-info btn-sm">
              <i class="nav-icon fas fa-pen"></i>
            </a>
            <button type="submit" class="btn btn-danger btn-sm"><i class="nav-icon fas fa-trash"></i></button>
          </form>
        </td>
      </tr>
      <% }) %>
  </tbody>
</table>